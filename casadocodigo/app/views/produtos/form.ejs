<html>
	<body>
		<div class='erros'>
			<%if(errosValidacao){%>
				<ul>
					<%for(var i=0;i<errosValidacao.length;i++){%>
						<li><%=errosValidacao[i].param%> - <%=errosValidacao[i].msg%></li>
					<%}%>
				</ul>

			<%}%>
		</div>
		<form action="/produtos" method="post">
			<div>
				<lable for="titulo">Titulo</lable>
				<input type="text" name="titulo" id="titulo" value="<%=produto.titulo%>" placeholder="coloque o titulo do livro"/>
			<div>
			<br/>
			<div>
				<lable for="descricao">Descrição</lable>
				<textarea cols="20" rows="10" name="descricao" id="descricao" placeholder="coloque o descricao do livro"><%=produto.descricao%></textarea>
			<div>
			<br/>
			<div>
				<lable for="preco">Preço</lable>
				<input type="number" name="preco"  id="preco" value="<%=produto.preco%>" placeholder="coloque o preco do livro"/>
			<div>
			
			<input type="submit" value="gravar"/>
		</form>
	</body>
<html>